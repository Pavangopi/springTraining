<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

<context:annotation-config></context:annotation-config>

<!-- <bean 
class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/> is an alternative
for context:annotation-config which will help @Autowired annotation works.  -->

<bean id="tv" class="com.spring.beans.Tv">
<property name="brand" value="samsung"></property>
</bean>

<bean id="remote1" class="com.spring.beans.Remote" >
<property name="channelno" value="1406"></property>
</bean>

<bean id="remote" class="com.spring.beans.Remote" >
<property name="channelno" value="1405"></property>
</bean>



</beans>